<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_a"
    android:background="@color/black"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.camera2study.textureView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/dd"
        android:background="#59000000"
        android:layout_above="@+id/cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cc"
        android:stateListAnimator="@null"
        android:orientation="horizontal"
        android:background="#66000000"
        android:layout_alignBottom="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ln_bph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="#59000000"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白平衡"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/bph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:text="自动"
                android:textSize="12sp"
                android:textColor="#A9A9A9" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_dj"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="1dp"
            android:background="#59000000"
            android:layout_height="match_parent">
            <TextView
                android:text="手动对焦"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dj"
                android:text="自动"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#A9A9A9"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_kmsj"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="1dp"
            android:background="#59000000"
            android:layout_height="match_parent">
            <TextView
                android:text="快门时间"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/kmsj"
                android:text="自动"
                android:textSize="12sp"
                android:layout_marginVertical="3dp"
                android:textColor="#A9A9A9"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_iso"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#59000000"
            android:layout_height="match_parent">
            <TextView
                android:text="感光ISO"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/iso"
                android:text="自动"
                android:layout_marginTop="3dp"
                android:textColor="#A9A9A9"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_preview"
        android:gravity="center">
        <TextView
            android:id="@+id/tx_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textColor="#1E90FF" />
        <TextView
            android:id="@+id/tx_recode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="录像"
            android:textColor="#ffffff" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aa"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_reset"
            android:background="@drawable/reset"
            android:layout_width="50dp"
            android:layout_marginStart="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button"/>
        <TextView
            android:id="@+id/open"
            android:text="开启预览"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:textSize="25sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>